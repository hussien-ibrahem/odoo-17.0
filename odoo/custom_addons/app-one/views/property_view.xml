<odoo>

    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="property_table_view">
                <field name="name"/>
                <field name="owner_id"/>
                <field name="state"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="garage" optional="1"/>
                <field name="garden_area" optional="1"/>
            </tree>
        </field>
    </record>


    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="postcode"/>
                <field name="name"/>

            </search>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="actoin_draft" type="object" class="btn-primary" string="Save to Draft"
                                invisible="state=='draft'"/>
                        <button name="actoin_pending" type="object" class="btn-secondary" string="Save to Pending"
                                invisible="state !='draft'"/>
                        <button name="actoin_sold" type="object" class="btn-success" string="Save to Sold"
                                invisible="state !='pending'"/>
                        <field name="state" widget="statusbar"/>

                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="owner_id"/>
                            <field name="owner_address"/>
                            <field name="owner_phone"/>

                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="diff"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                        </group>
                        <group>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="Bedrooms">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
    </record>


    <record id="property_closed_server_action" model="ir.actions.server">
        <field name="name">Closed</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.actoin_closed()
        </field>
    </record>


    <menuitem
            id="property_menu_item"
            name="Properties"
            parent="property_root_menu"
            action="property_action"
    />

</odoo>